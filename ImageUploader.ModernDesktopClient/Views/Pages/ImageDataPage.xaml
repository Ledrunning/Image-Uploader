<ui:UiPage x:Class="ImageUploader.ModernDesktopClient.Views.Pages.ImageDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageUploader.ModernDesktopClient.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:ImageDataPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="56,0">
        <Grid Margin="0,37,0,26">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ui:DataGrid Grid.Column="0" ItemsSource="{Binding ViewModel.LoadedData, Mode=OneWay }" IsReadOnly="True" 
                         SelectedItem="{Binding Path=ViewModel.RowSelectedCommand, Mode=OneWay}"/>

            <Grid Grid.Column="1" Margin="0,0,-28,0"/>
            <Image Grid.Column="1" Margin="16,33,2,182" Stretch="Fill" Source="{Binding ViewModel.LoadedImage.Source, Mode=OneWay}"/>
        </Grid>
    </Grid>
</ui:UiPage>
